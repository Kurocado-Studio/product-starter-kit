{
  "name": "@kurocado-studio/product-starter-kit",
  "version": "0.0.0-semantically-released",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "clean": "rm -rf node_modules pnpm.lock dist",
    "dev": "vite",
    "eslint-check": "eslint --max-warnings=0 . --debug",
    "eslint-fix": "eslint --max-warnings=0 . --fix --no-warn-ignored",
    "lint": "eslint --max-warnings=0 . --no-warn-ignored",
    "prepare": "husky install",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "start": "remix-serve ./build/server/index.js",
    "test": "vitest run --coverage",
    "typecheck": "tsc --pretty --noEmit",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*": ["pnpm run prettier-fix"],
    "**/*.{ts,tsx}": ["pnpm run eslint-fix", "pnpm run lint"]
  },
  "dependencies": {
    "@kurocado-studio/ui": "1.3.3-develop.1",
    "framer-motion": "^12.14.0",
    "isbot": "^5.1.27",
    "lodash-es": "^4.17.21",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@kurocado-studio/qa": "2.0.0-alpha.2",
    "@kurocado-studio/styleguide": "2.5.2",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.17",
    "@types/react": "18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.0.5",
    "autoprefixer": "^10.4.21",
    "commitlint": "^19.8.1",
    "eslint": "^9.27.0",
    "eslint-plugin-storybook": "^0.12.0",
    "husky": "^9.1.7",
    "import": "^0.0.6",
    "lint-staged": "^16.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.8.3",
    "vite": "^6.2.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20"
  },
  "eslintConfig": {
    "extends": ["plugin:storybook/recommended"]
  }
}
