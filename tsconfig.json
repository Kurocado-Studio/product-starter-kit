{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@kurocado-studio/qa/web/tsconfig.qa",
    "@kurocado-studio/styleguide/remix/tsconfig"
  ],
  "compilerOptions": {
    "types": ["@types/react", "vitest/globals", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react"
  },
  "include": [
    "src",
    "stories",
    ".storybook/Preview.tsx",
    ".storybook/main.ts",
    "setup.web.ts",
    "tailwind.config.ts",
    "test",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
